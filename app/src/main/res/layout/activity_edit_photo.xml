<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:id="@+id/buttonPanel"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/lightBlue">

            <ImageButton
                android:id="@+id/cancel_EDIT_PHOTO"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="left|top"
                android:layout_marginStart="44dp"
                android:background="@drawable/close" />

            <ImageButton
                android:id="@+id/checkORsave_EDIT_PHOTO"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/check" />

            <ImageButton
                android:id="@+id/settings_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/cancel_EDIT_PHOTO"
                android:layout_marginEnd="42dp"
                android:background="@drawable/settings" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/squareMaker"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:background="@color/black_overlay"
            android:alpha=".80">
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/buttonPanel"
            android:layout_below="@id/squareMaker"
            android:id="@+id/image_wrapper_EDIT_PHOTO">

            <dealwithit.johannes_drescher.de.dealwithitapp.view.PhotoView
                android:id="@+id/picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <dealwithit.johannes_drescher.de.dealwithitapp.view.PhotoView
                android:id="@+id/glasses_EDIT_PHOTO"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/DealWithIt_EDIT_PHOTO"
                android:layout_width="300dp"
                android:layout_height="58dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_centerHorizontal="true"
                android:background="@drawable/deal_with_it"
                android:visibility="invisible" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>